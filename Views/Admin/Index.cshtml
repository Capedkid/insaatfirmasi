@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Paneli";
    ViewData["Description"] = "Site yönetimi için admin paneli.";
    ViewData["Keywords"] = "admin, yönetim, ürün yönetimi, blog yönetimi";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Admin Paneli</h1>
    </div>
</section>

<!-- ADMİN DASHBOARD KARTLARI -->
<section class="home-section admin-dashboard-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Ürün Yönetimi</h3>
                    <p>Ürün ekleme, düzenleme ve silme işlemlerini buradan yöneteceksiniz.</p>
                    <a asp-controller="AdminProduct" asp-action="Index" class="home-card-link">
                        Ürün yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Kategori Yönetimi</h3>
                    <p>Ürün kategorilerini oluşturup yapılandırabileceğiniz alan.</p>
                    <a asp-controller="AdminCategory" asp-action="Index" class="home-card-link">
                        Kategori yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Blog Yönetimi</h3>
                    <p>Blog yazıları ekleyip düzenleyerek içeriklerinizi güncel tutun.</p>
                    <a href="#" class="home-card-link">
                        Blog yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Katalog Yönetimi</h3>
                    <p>PDF katalogları ve dokümanları sisteme yükleyip yönetin.</p>
                    <a href="#" class="home-card-link">
                        Katalog yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>İletişim Mesajları</h3>
                    <p>Müşterilerinizden gelen iletişim formlarını görüntüleyip yanıtlayın.</p>
                    <a href="#" class="home-card-link">
                        Mesajları görüntüle <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="home-card admin-card">
                    <h3>Kullanıcı Yönetimi</h3>
                    <p>Admin hesapları ve yetkileri yönetebileceğiniz bölüm.</p>
                    <a href="#" class="home-card-link">
                        Kullanıcı yönetimine git <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
