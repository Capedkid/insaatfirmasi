@{
    ViewData["Title"] = "İletişim";
    ViewData["Description"] = "Plastik inşaat çözümleri için bizimle iletişime geçin. Projelerinize uygun ürün ve teknik destek sunuyoruz.";
    ViewData["Keywords"] = "iletişim, drenaj, rögar, ıslak zemin, proje desteği";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">İletişim</h1>
    </div>
</section>

<!-- İLETİŞİM BLOKLARI -->
<section class="home-section about-history-section">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="about-value-card">
                    <i class="fas fa-phone-alt"></i>
                    <h3>Telefon</h3>
                    <p>+90 (332) 123 45 67<br />+90 (332) 123 45 68</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="about-value-card">
                    <i class="fas fa-envelope"></i>
                    <h3>E-posta</h3>
                    <p>info@insaatfirmasi.com<br />satis@insaatfirmasi.com</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="about-value-card">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>Adres</h3>
                    <p>Organize Sanayi Bölgesi No:123<br />Konya / Türkiye</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- BASİT İLETİŞİM FORMU (TASARIM) -->
<section class="home-section home-section-alt">
    <div class="container-xl">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="home-card">
                    <span class="home-section-kicker d-block mb-1">İletişim Formu</span>
                    <h2 class="home-section-title">Bize kısa bir mesaj bırakın</h2>
                    <p class="home-section-text mb-4">
                        Aşağıdaki form sadece tasarım amacıyla eklenmiştir. Veritabanı ve e-posta altyapısı kurulduğunda
                        mesajlarınız sistem üzerinden kaydedilecektir.
                    </p>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input type="text" class="form-control" placeholder="Adınızı ve soyadınızı yazın" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">E-posta</label>
                            <input type="email" class="form-control" placeholder="ornek@firma.com" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Konu</label>
                            <input type="text" class="form-control" placeholder="Kısa bir konu başlığı" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mesaj</label>
                            <textarea class="form-control" rows="4" placeholder="Mesajınızı yazın..."></textarea>
                        </div>
                        <button type="button" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-paper-plane me-2"></i>Mesajı Gönder (Tasarım)
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="home-card">
                    <span class="home-section-kicker d-block mb-1">Konum</span>
                    <h2 class="home-section-title">Fabrikamız ve ofisimiz</h2>
                    <p class="home-section-text mb-4">
                        Google Maps entegrasyonu bu alana yerleştirilecektir. Şimdilik konum bilgisi görsel
                        olarak temsil edilmektedir.
                    </p>
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 300px; border-radius: 1rem;">
                        <div class="text-center text-muted">
                            <i class="fas fa-map fa-3x mb-3"></i>
                            <p class="mb-0">Google Maps haritası burada görünecek</p>
                            <small>Organize Sanayi Bölgesi, Konya</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
