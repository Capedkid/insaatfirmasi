@model InsaatFirmasi.Models.Catalog
@{
    ViewData["Title"] = Model.Title;
    ViewData["Description"] = Model.Description?.Length > 160 ? Model.Description.Substring(0, 160) + "..." : Model.Description;
    ViewData["Keywords"] = $"{Model.Title}, katalog, {Model.Description}, inşaat malzemeleri katalog";
}

<!-- Breadcrumb -->
<section class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Catalog")">Online Katalog</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Katalog Detayları -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Katalog Görseli -->
            <div class="col-lg-6">
                <div class="position-relative">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="~/uploads/catalogs/@Model.CoverImageUrl" 
                             class="img-fluid rounded shadow-lg" 
                             alt="@Model.Title"
                             style="height: 500px; width: 100%; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded shadow-lg" 
                             style="height: 500px;">
                            <div class="text-center">
                                <i class="fas fa-file-pdf fa-5x text-danger mb-3"></i>
                                <h4 class="text-muted">@Model.Title</h4>
                            </div>
                        </div>
                    }
                    
                    <div class="position-absolute top-0 end-0 p-3">
                        <span class="badge bg-danger fs-6">
                            <i class="fas fa-download me-1"></i>@Model.DownloadCount İndirme
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Katalog Bilgileri -->
            <div class="col-lg-6">
                <div class="catalog-info">
                    <!-- Katalog Adı -->
                    <h1 class="display-5 fw-bold text-dark mb-3">@Model.Title</h1>
                    
                    <!-- Açıklama -->
                    <div class="mb-4">
                        <p class="lead text-muted">@Model.Description</p>
                    </div>
                    
                    <!-- Katalog Bilgileri -->
                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="fas fa-file text-danger me-3 fa-2x"></i>
                                <div>
                                    <h6 class="fw-bold mb-0">@Model.FileExtension.ToUpper()</h6>
                                    <small class="text-muted">Dosya Formatı</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="fas fa-weight text-danger me-3 fa-2x"></i>
                                <div>
                                    <h6 class="fw-bold mb-0">@Model.FileSize</h6>
                                    <small class="text-muted">Dosya Boyutu</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="fas fa-download text-danger me-3 fa-2x"></i>
                                <div>
                                    <h6 class="fw-bold mb-0">@Model.DownloadCount</h6>
                                    <small class="text-muted">İndirme Sayısı</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="fas fa-calendar text-danger me-3 fa-2x"></i>
                                <div>
                                    <h6 class="fw-bold mb-0">@Model.CreatedDate.ToString("dd.MM.yyyy")</h6>
                                    <small class="text-muted">Yayın Tarihi</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Aksiyon Butonları -->
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Download", "Catalog", new { id = Model.Id })" 
                           class="btn btn-danger btn-lg">
                            <i class="fas fa-download me-2"></i>Katalogu İndir
                        </a>
                        <div class="row g-2">
                            <div class="col-6">
                                <a href="@Url.Action("View", "Catalog", new { id = Model.Id })" 
                                   class="btn btn-outline-danger w-100" target="_blank">
                                    <i class="fas fa-eye me-2"></i>Online Görüntüle
                                </a>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-outline-danger w-100" onclick="shareCatalog()">
                                    <i class="fas fa-share me-2"></i>Paylaş
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Katalog İçeriği -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-4">
                        <h3 class="fw-bold text-dark mb-0">Katalog İçeriği</h3>
                        <p class="text-muted mb-0">Bu katalogda neler bulacaksınız?</p>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check text-danger me-3"></i>
                                    <span>Detaylı ürün bilgileri</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check text-danger me-3"></i>
                                    <span>Yüksek kaliteli ürün görselleri</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check text-danger me-3"></i>
                                    <span>Teknik özellikler ve boyutlar</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check text-danger me-3"></i>
                                    <span>Montaj ve kullanım kılavuzu</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check text-danger me-3"></i>
                                    <span>Fiyat listesi ve koşulları</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check text-danger me-3"></i>
                                    <span>İletişim bilgileri</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- İlgili Kataloglar -->
@if (ViewBag.RelatedCatalogs != null)
{
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-dark">İlgili Kataloglar</h2>
                <p class="text-muted">Diğer kataloglarımızı da inceleyin</p>
            </div>
            
            <div class="row g-4">
                @foreach (var catalog in ViewBag.RelatedCatalogs as IEnumerable<InsaatFirmasi.Models.Catalog>)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(catalog.CoverImageUrl))
                                {
                                    <img src="~/uploads/catalogs/@catalog.CoverImageUrl" 
                                         class="card-img-top" 
                                         alt="@catalog.Title"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                         style="height: 200px;">
                                        <i class="fas fa-file-pdf fa-3x text-danger"></i>
                                    </div>
                                }
                                
                                <span class="position-absolute top-0 end-0 p-2">
                                    <span class="badge bg-danger">@catalog.DownloadCount</span>
                                </span>
                            </div>
                            
                            <div class="card-body text-center">
                                <h6 class="card-title fw-bold">@catalog.Title</h6>
                                <p class="card-text text-muted small">
                                    @(catalog.Description?.Length > 80 ? catalog.Description.Substring(0, 80) + "..." : catalog.Description)
                                </p>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="@Url.Action("Details", "Catalog", new { id = catalog.Id })" 
                                       class="btn btn-danger btn-sm">
                                        İncele
                                    </a>
                                    <a href="@Url.Action("Download", "Catalog", new { id = catalog.Id })" 
                                       class="btn btn-outline-danger btn-sm">
                                        İndir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- İletişim CTA -->
<section class="py-5 bg-danger text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="display-6 fw-bold mb-3">Katalog Hakkında Sorularınız mı Var?</h2>
                <p class="lead mb-0">
                    Bu katalog hakkında detaylı bilgi almak, özel talep veya sipariş vermek için bizimle iletişime geçin.
                </p>
            </div>
            <div class="col-lg-4 text-end">
                <a href="@Url.Action("Index", "Contact")" class="btn btn-light btn-lg px-4">
                    <i class="fas fa-phone me-2"></i>İletişime Geçin
                </a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function shareCatalog() {
            if (navigator.share) {
                navigator.share({
                    title: '@Model.Title',
                    text: '@Model.Description',
                    url: window.location.href
                });
            } else {
                // Fallback: URL'yi kopyala
                navigator.clipboard.writeText(window.location.href);
                alert('Katalog linki kopyalandı!');
            }
        }
    </script>
}
