<!-- İletişim Formu ve Harita -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row g-5">
            <!-- İletişim Formu -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-4">
                        <h3 class="fw-bold text-dark mb-0">Bize Mesaj Gönderin</h3>
                        <p class="text-muted mb-0">Sorularınız için formu doldurun, en kısa sürede size dönüş yapalım.</p>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Contact" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="name" class="form-label fw-semibold">Ad Soyad *</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label fw-semibold">E-posta *</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label fw-semibold">Telefon</label>
                                    <input type="tel" class="form-control" id="phone" name="phone">
                                </div>
                                <div class="col-md-6">
                                    <label for="company" class="form-label fw-semibold">Şirket</label>
                                    <input type="text" class="form-control" id="company" name="company">
                                </div>
                                <div class="col-12">
                                    <label for="subject" class="form-label fw-semibold">Konu *</label>
                                    <select class="form-select" id="subject" name="subject" required>
                                        <option value="">Konu seçiniz</option>
                                        <option value="Ürün Bilgisi">Ürün Bilgisi</option>
                                        <option value="Fiyat Teklifi">Fiyat Teklifi</option>
                                        <option value="Teknik Destek">Teknik Destek</option>
                                        <option value="Satış">Satış</option>
                                        <option value="Diğer">Diğer</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label fw-semibold">Mesaj *</label>
                                    <textarea class="form-control" id="message" name="message" rows="5" required placeholder="Mesajınızı buraya yazın..."></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="privacy" name="privacy" required>
                                        <label class="form-check-label" for="privacy">
                                            <a href="#" class="text-danger">Gizlilik Politikası</a>'nı okudum ve kabul ediyorum. *
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-danger btn-lg px-5">
                                        <i class="fas fa-paper-plane me-2"></i>Mesaj Gönder
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Harita ve Ek Bilgiler -->
            <div class="col-lg-6">
                <!-- Harita -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="fw-bold text-dark mb-0">Konumumuz</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                            <div class="text-center text-muted">
                                <i class="fas fa-map fa-3x mb-3"></i>
                                <p class="mb-0">Google Maps entegrasyonu</p>
                                <small>Organize Sanayi Bölgesi, Konya</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Çalışma Saatleri -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="fw-bold text-dark mb-0">Çalışma Saatleri</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-semibold">Pazartesi - Cuma:</span>
                                    <span class="text-muted">08:00 - 18:00</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-semibold">Cumartesi:</span>
                                    <span class="text-muted">09:00 - 15:00</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-semibold">Pazar:</span>
                                    <span class="text-muted">Kapalı</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-semibold">Acil Durum:</span>
                                    <span class="text-danger fw-semibold">7/24</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

