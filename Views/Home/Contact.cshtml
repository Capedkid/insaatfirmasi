@{
    ViewData["Title"] = "İletişim";
    ViewData["Description"] = "İnşaat malzemeleri ve enjeksiyon imalatları için bizimle iletişime geçin. Profesyonel destek ve kaliteli hizmet.";
    ViewData["Keywords"] = "iletişim, telefon, adres, e-posta, inşaat malzemeleri, destek";
}

<!-- Page Header -->
<section class="bg-danger text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-3">İletişim</h1>
                <p class="lead mb-0">Bizimle iletişime geçin, size en iyi hizmeti sunalım</p>
            </div>
        </div>
    </div>
</section>

@using InsaatFirmasi.Models
@{
    var contactInfo = ViewBag.ContactInfo as ContactInfo;
}

<!-- İletişim Bilgileri -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            @if (contactInfo != null && !string.IsNullOrEmpty(contactInfo.Phone))
            {
                <div class="col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 text-center">
                            <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="fas fa-phone fa-2x"></i>
                            </div>
                            <h5 class="fw-bold text-dark mb-3">Telefon</h5>
                            <p class="text-muted mb-0">@contactInfo.Phone</p>
                            <small class="text-muted">Pazartesi - Cuma: 08:00 - 18:00</small>
                        </div>
                    </div>
                </div>
            }
            @if (contactInfo != null && !string.IsNullOrEmpty(contactInfo.Email))
            {
                <div class="col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 text-center">
                            <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <h5 class="fw-bold text-dark mb-3">E-posta</h5>
                            <p class="text-muted mb-0">@contactInfo.Email</p>
                            <small class="text-muted">24 saat içinde yanıt</small>
                        </div>
                    </div>
                </div>
            }
            @if (contactInfo != null && !string.IsNullOrEmpty(contactInfo.Address))
            {
                <div class="col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 text-center">
                            <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                            </div>
                            <h5 class="fw-bold text-dark mb-3">Adres</h5>
                            <p class="text-muted mb-0">@Html.Raw(contactInfo.Address.Replace("\n", "<br>"))</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Harita -->
@if (contactInfo != null && !string.IsNullOrEmpty(contactInfo.Latitude) && !string.IsNullOrEmpty(contactInfo.Longitude))
{
    <section class="bg-light py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="fw-bold text-dark mb-0">Konumumuz</h5>
                        </div>
                        <div class="card-body p-0">
                            <iframe 
                                src="https://www.google.com/maps?q=@contactInfo.Latitude,@contactInfo.Longitude&hl=tr&z=14&output=embed"
                                width="100%" 
                                height="400" 
                                style="border:0;" 
                                allowfullscreen="" 
                                loading="lazy" 
                                referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
