@{
    ViewData["Title"] = "Hakkımızda";
    ViewData["Description"] = "Plastik inşaat çözümlerinde modern ve güvenilir üretici.";
    ViewData["Keywords"] = "hakkımızda, plastik inşaat, drenaj, rögar, ıslak zemin";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Kurumsal</h1>
    </div>
</section>

<!-- TARİHÇE VE YAKLAŞIM -->
<section class="home-section about-history-section">
    <div class="container-xl">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="about-text-block">
                    <span class="home-section-kicker">Tarihçemiz</span>
                    <h2 class="home-section-title">1995'ten bugüne plastik inşaat çözümleri</h2>
                    <p class="home-section-text">
                        1995 yılında plastik banyo ve inşaat malzemeleri üretimine başlayan firmamız,
                        bugün 50.000 m² üretim alanına sahip modern fabrikasında drenaj kanalları,
                        rögar menhol kutuları ve ıslak zemin ürünleri üreterek sektöre yön veriyor.
                    </p>
                    <p class="home-section-text mt-3">
                        Tasarım odaklı yaklaşımımız ve kalite standartlarımız sayesinde, ürünlerimiz sadece
                        fonksiyonel değil, aynı zamanda estetik değer de taşıyor. Projelerin ihtiyaçlarına
                        göre esnek üretim ve özel tasarım çözümleri sunuyoruz.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-grid-cards">
                    <div class="about-grid-card">
                        <i class="fas fa-industry"></i>
                        <h3>Modern üretim teknolojisi</h3>
                        <p>Yüksek kapasiteli enjeksiyon makineleri, otomasyon hatları ve CNC kalıphane.</p>
                    </div>
                    <div class="about-grid-card">
                        <i class="fas fa-award"></i>
                        <h3>Kalite odaklı yaklaşım</h3>
                        <p>Her üretim aşamasında ölçüsel kontrol ve standartlara uygunluk.</p>
                    </div>
                    <div class="about-grid-card">
                        <i class="fas fa-lightbulb"></i>
                        <h3>İnovasyon ve tasarım</h3>
                        <p>Ürünlerimize sadece maddesel değil, estetik ve fonksiyonel değer de katıyoruz.</p>
                    </div>
                    <div class="about-grid-card">
                        <i class="fas fa-handshake-angle"></i>
                        <h3>Uzun soluklu iş birlikleri</h3>
                        <p>Projelerin başlangıcından teslimine kadar teknik destek ve danışmanlık.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MİSYON / VİZYON -->
<section class="home-section about-mission-vision">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="about-pill-card">
                    <div class="about-pill-icon">
                        <i class="fas fa-bullseye"></i>
                    </div>
                    <h3>Misyonumuz</h3>
                    <p>
                        Drenaj kanalları, rögar menhol kutuları ve ıslak zemin ürünlerinde yüksek kaliteli,
                        uzun ömürlü ve sürdürülebilir plastik çözümler sunarak projelerin güvenilir ortağı
                        olmak.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-pill-card">
                    <div class="about-pill-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <h3>Vizyonumuz</h3>
                    <p>
                        Plastik inşaat malzemelerinde hem Türkiye’de hem de global pazarda tercih edilen,
                        inovasyon ve tasarım gücüyle öne çıkan bir marka olmak.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- DEĞERLERİMİZ -->
