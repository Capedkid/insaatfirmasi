@model IEnumerable<InsaatFirmasi.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
    ViewData["Description"] = "Plastik drenaj kanalları, rögar menhol kutuları ve ıslak zemin ürünleri için modern ürün gamı.";
    ViewData["Keywords"] = "ürünler, drenaj, rögar, ıslak zemin, plastik inşaat ürünleri";
}

<!-- SAYFA HERO -->
<section class="page-hero page-hero-simple">
    <div class="container-xl text-center">
        <h1 class="page-hero-title">Ürünler</h1>
    </div>
</section>

<!-- ÜRÜN KARTLARI -->
<section class="home-section product-list-section">
    <div class="container-xl">
        <div class="home-section-header">
            <span class="home-section-kicker">Ürünler</span>
            <h2 class="home-section-title">Veritabanından gelen ürünler</h2>
            <p class="home-section-text">
                Aşağıdaki liste MySQL veritabanındaki ürün kayıtları üzerinden oluşturulmaktadır. Admin panel tamamlandığında
                bu alanı yönetim ekranlarından güncelleyebileceksiniz.
            </p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="product-group-card">
                            <div class="product-group-image">
                                @if (!string.IsNullOrEmpty(product.MainImagePath))
                                {
                                    <img src="~/@product.MainImagePath"
                                         alt="@product.Name" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                        <i class="fas fa-box-open fa-2x"></i>
                                    </div>
                                }
                            </div>
                            <h3>@product.Name</h3>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="fas fa-box-open fa-3x mb-3"></i>
                <h4>Henüz ürün eklenmemiş</h4>
                <p>Admin panel üzerinden ürün eklediğinizde bu alanda listelenecektir.</p>
            </div>
        }
    </div>
</section>
